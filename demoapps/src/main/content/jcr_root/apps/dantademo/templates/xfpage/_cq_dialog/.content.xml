<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Page"
    extraClientlibs="[cq.common.wcm,core.wcm.page.properties,cq.wcm.msm.properties]"
    mode="edit">
    <content
        granite:class="cq-dialog-content-page"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                granite:class="cq-siteadmin-admin-properties-tabs"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                size="L">
                <items jcr:primaryType="nt:unstructured">
                    <disclosureInformation
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Disclosure Information"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <disclosureSettings
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Disclosure settings"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <uniqueId
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                disabled="{Boolean}true"
                                                fieldLabel="Unique ID"
                                                name="uniqueId"
                                                renderReadOnly="{Boolean}true"/>
                                            <market
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                emptyText="Select..."
                                                fieldLabel="Market"
                                                multiple="{Boolean}true"
                                                name="./market"
                                                renderReadOnly="{Boolean}true"
                                                required="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <institutional
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Institutional"
                                                        value="institutional"/>
                                                    <international
                                                        jcr:primaryType="nt:unstructured"
                                                        text="International"
                                                        value="international"/>
                                                    <usRetail
                                                        jcr:primaryType="nt:unstructured"
                                                        text="US Retail"
                                                        value="usretail"/>
                                                </items>
                                            </market>
                                            <disclosureComments
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                fieldLabel="Disclosure Comments"
                                                name="./disclosureComments"
                                                renderReadOnly="{Boolean}true"/>
                                            <usageGuidelines
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                fieldLabel="Usage Guidelines"
                                                name="./usageGuidelines"
                                                renderReadOnly="{Boolean}true"/>
                                            <presentationRequirements
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                fieldLabel="Presentation Requirements"
                                                name="./presentationRequirements"
                                                renderReadOnly="{Boolean}true"/>
                                            <terminateDate
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                                displayedFormat="MMMM DD, YYYY hh:mm a"
                                                displayTimezoneMessage="{Boolean}true"
                                                fieldLabel="Terminate Date"
                                                name="./terminateDate"
                                                renderReadOnly="{Boolean}true"
                                                type="datetime"/>
                                            <efectiveDate
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                                displayedFormat="MMMM DD, YYYY hh:mm a"
                                                displayTimezoneMessage="{Boolean}true"
                                                fieldLabel="Efective Date"
                                                name="./efectiveDate"
                                                renderReadOnly="{Boolean}true"
                                                type="datetime"/>
                                            <tags
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                                allowBulkEdit="{Boolean}true"
                                                autocreateTag="{Boolean}true"
                                                fieldLabel="Tags"
                                                multiple="{Boolean}true"
                                                name="./tags"
                                                required="{Boolean}true"/>
                                            <tagsShowOnCreate
                                                cq:hideOnEdit="{Boolean}true"
                                                cq:showOnCreate="{Boolean}true"
                                                granite:comment="Handled by a custom POST servlet for the Create Page case"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                                fieldLabel="Tags"
                                                multiple="{Boolean}true"
                                                name="./tags"/>
                                            <stats
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/experience-fragments/components/experiencefragment/stats"
                                                path="${param.item}"/>
                                        </items>
                                    </disclosureSettings>
                                </items>
                            </column>
                        </items>
                    </disclosureInformation>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
